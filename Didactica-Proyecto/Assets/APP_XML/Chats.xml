<?xml version="1.0" encoding="utf-8"?>
<Application id="1">
    <!--Cada persona tiene su ID y su nombre, el nombre es mas para nosotros encontrarlos facil que para el codigo del juego.-->
    <Person id="1" name="AAMom">
        <!--Cada mensaje tiene un id tambien, el segundo valor es un booleano que dice si el mensaje es tuyo o de la persona con la que habalas.-->
        <Message id="1" isSendByPerson="true" isActive="true"> 
            <!--isSendByPerson = true -> Es mandado por la otra persona.-->
            <!--isSendByPerson = false -> Es mandado por ti / Esto es para los mensajes antiguos.-->
            <!--isActive determina si el mensaje se debe mostrar en la conversacion o no.-->
            <Text id="1"> <!--Cuerpo del mensaje.-->
                Hi sweetie, are u awake?
            </Text>
            <Date id="2"> <!--Fecha del envio- Puede ser en formato dd/mm/aaaa o en hh:mm, dependiendo de cuando se envio.-->
                19/03/2020 
            </Date>
        </Message>
    </Person>
    <!--Ejemplo 2-->
    <Person id="2" name="Love">
        <Message id="1" isSendByPerson="true" isActive="false" > 
            <Text id="1">
                Fuck you!
            </Text>
            <Date id="2">
                23:48
            </Date>
        </Message>
    </Person>
</Application>